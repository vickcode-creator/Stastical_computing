
import numpy as np

def bootstrap_mean(data, n_boot=1000):
    n = len(data)
    boots = np.random.choice(data, size=(n_boot, n), replace=True)
    means = boots.mean(axis=1)
    return np.percentile(means, [2.5, 50, 97.5])

if __name__ == "__main__":
    np.random.seed(1)
    data = np.random.exponential(scale=2.0, size=100)
    ci = bootstrap_mean(data, n_boot=2000)
    print("Bootstrap mean CI (2.5,50,97.5):", ci)
